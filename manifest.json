{
    "manifest_version": 3,
    "name": "SmartRural AI",
    "version": "1.0.0",
    "description": "Enhance educational experience for students in rural Kenya with personalized study materials using AI.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    
    "web_accessible_resources": [
      {
        "resources": ["images/*"],
        "matches": ["<all_urls>"]
      }
    ],
    "host_permissions": [
      "*://*/*"
    ]
  }
  